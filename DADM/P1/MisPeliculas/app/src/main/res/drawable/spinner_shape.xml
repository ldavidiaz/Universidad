<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!-- Fondo redondeado -->
<item>
    <shape android:shape="rectangle">
        <solid android:color="#E8EBEC" /> <!-- Color de fondo del Spinner -->
        <corners android:radius="8dp" /> <!-- Radio de los bordes redondeados -->
    </shape>
</item>
<!-- Borde inferior cuadrado -->
<item android:top="-2dp" android:left="-2dp" android:right="-2dp">
    <shape android:shape="rectangle">
        <solid android:color="#E8EBEC" /> <!-- Color del borde -->
        <corners android:topRightRadius="0dp" android:topLeftRadius="0dp" /> <!-- Bordes inferiores cuadrados -->
    </shape>
</item>
</layer-list>
